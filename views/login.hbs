<html>
    <head>
        <title>
            The BingeList-LogIn
        </title>
        <link rel = stylesheet type="text/css" media="all" href="assets/styleLogin.css">
        <link rel = "icon" href = "assets/icon.png" type = "image/x-icon">
    </head>
    <body>
        <div class="container">
            <div class="loginBx">
                <img src="assets/logo.png"><br>
                <form action="/login-attempt" method="post">
                    <table>
                        <tr>
                            <td><label for="uname">Username:</label></td>
                            <td><input type="text" id="uname" name="uname"></td>
                        </tr>
                        <tr>
                            <td><label for="password">Password:</label></td>
                            <td><input type="password" id="password" name="password"><br></td>
                        </tr>
                    </table>

                    <center>{{> messages}}</center>

                    <input id="submit" type="submit" value="Login">

                </form>

                <p>No account yet? <a href="register" id="reg">Register Here</a></p>
            </div>
        </div>
    </body>
</html>